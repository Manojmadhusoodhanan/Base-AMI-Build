{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },
  "builders": [
    {
      "type": "amazon-ebs",
      "access_key": "{{user `aws_access_key`}}",
      "secret_key": "{{user `aws_secret_key`}}",
      "region": "ap-south-1",
      "source_ami_filter": {
        "filters": {
          "virtualization-type": "hvm",
          "name": "RHEL_HA-8.4.0_HVM*.*GP2",
          "root-device-type": "ebs"
        },
        "owners": [
          "309956199498"
        ],
        "most_recent": true
      },
      "instance_type": "t2.micro",
      "ssh_username": "{{user `ssh_username`}}",
      "ami_name": "redHat-ami",
	  "tags":{
		"Name": "redHat-AMI"
	  }
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "ssh.sh" 
    }
  ]
}
